@{
	ViewData["Title"] = "Login Page";
	Layout = null;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<div class="container vh-100 d-flex align-items-center">
    <div class="row">
        <div class="col-lg-7">
            <img class="w-100" src="https://static.vecteezy.com/system/resources/previews/000/427/700/original/books-stack-realistic-vector.jpg?format=jpg&height=900&width=1600&fit=bounds" alt="">
        </div>
        <div class="col-lg-5 d-flex align-items-center">
            <div class="w-100">
                <h1 class="text-center text-primary">Book Store</h1>
                <form class="mt-4" action="/Login/SignIn" method="post">
                    <div class="mb-3">
                        <input type="email" name="email" class="form-control" placeholder="Email address" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                    <span id="message" style="color: red;"></span>
                    <br/>
                    <div class="row justify-content-center">
                        <div class ="col-5 text-center">
                            <button  type="submit" class="btn btn-primary " style="min-width: 120px;">Login</button> <br />
                        </div>
                        <div class="col-5 text-center">
                            <a class="btn btn-primary" style="min-width: 120px;" href="../Register">Register</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

<script>

    function getParameterByName(name) {

        var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
            results = regex.exec(window.location.search);

        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }

    var paramValue = getParameterByName('Message');
    document.getElementById("message").innerHTML = paramValue;
</script>
